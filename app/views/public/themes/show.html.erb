<h1><%= @theme.name%></h1>

<h3>投稿一覧</h3>

<table>
  <thead>
    <tr>
      <th></th>
      <th>ユーザ名</th>
      <th>タイトル</th>
      <th>都道県テーマ</th>
      <th>川柳</th>
      <th>参考サイト</th>
      <th>いいね</th>
      <th>コメント</th>
    </tr>
  </thead>

  <tbody>

<% @posts.each do |post| %>
  <tr>
    <td>
      <%= link_to user_path(post.user) do %>
      <%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
      <% end %>
    </td>

    <td>
      <%= post.user.name %>
    </td>

    <td>
      <%=link_to "#{post.title}", post_path(post) %>
    </td>

    <td>
      <%= post.theme.name %></br>
    </td>

    <td>
      「<%= post.first_body%>　<%= post.middle_body %>　<%= post.last_body %>」</br>
    </td>

    <td>
      <%= Rinku.auto_link(post.url, :all, 'target="_blank"').html_safe %>
    </td>

    <td>
     <%= post.favorites.count %>件
    </td>

    <td>
      <%= link_to "#{post.comments.count}", post_path(post) %>件
    </td>

    <% end %>

  </tr>