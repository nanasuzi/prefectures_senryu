<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">

      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラー
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

    <%= form_with model:@user, url: user_path(@user), method: :patch, local: true do |f| %>

      <h1>ユーザ編集</h1>

      <%= f.attachment_field :profile_image %></br>

      <%= f.label :name, "ユーザネーム" %></br>
      <%= f.text_field :name, class: "form-control" %></br>

      <%= f.label :email, "メールアドレス" %></br>
      <%= f.text_field :email, class: "form-control" %></br>

      <%= f.label :introduction, "自己紹介" %></br>
      <%= f.text_area :introduction, rows:'5', class: "form-control" %></br>

      <%= f.submit "更新", class: "btn btn-success btn-block" %>

      <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger btn-block" %>

      <%= link_to "戻る", user_path(@user), class: "btn btn-primary btn-block" %>

    <% end %>

    </div>
  </div>
</div>