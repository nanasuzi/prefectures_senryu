<div class="container">
  <div class="row">

<h1>会員一覧</h1>

<table class="table border" rules="cols">
  <thead>
    <tr>
      <th></th>
      <th>ユーザ名</th>
      <th>会員ステータス</th>
    </tr>
  </thead>

  <tbody>

<% @users.each do |user| %>
  <tr>
    <td>
      <%= link_to admin_user_path(user) do %>
      <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
      <% end %>
    </td>

    <td>
      <%= link_to "#{user.name}", admin_user_path(user) %>
    </td>

    <td>
      <% if user.is_active %>
        <span class="text-success">有効</span>
      <% else %>
        <span class="text-danger">無効</span>
      <% end %>
    </td>

    <% end %>
  </tr>

  </div>
  </div>